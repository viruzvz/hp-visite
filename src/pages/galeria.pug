extends /layouts/template.pug
block main
  .container
    nav(aria-label='breadcrumb')
      ol.breadcrumb
        li.breadcrumb-item
          a(href='#') Home
        li.breadcrumb-item.active(aria-current='page') Library
    h1.c-tertiary.mb-4 Galeria - 
      span Arte
